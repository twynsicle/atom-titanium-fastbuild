root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.ts]
indent_style = tab
indent_size = 4

[*.sh]
end_of_line = lf

[*.js]
indent_style = tab
indent_size = 4

[*.json]
indent_style = space
indent_size = 2

[*.scss]
indent_style = tab
indent_size = 4

[*.html]
indent_style = tab
indent_size = 4
